// vim: ft=jsonc

{

    // Automatically format these filetypes when saving write
    "coc.preferences.formatOnSaveFiletypes": [
        "java",
        "json",
        "python"
    ],

    // Open up a new tab upon following a tag to a new location
    "coc.preferences.jumpCommand": "tabe",

    // Display diagnostics on the current line and not just cursor location
    "diagnostic.checkCurrentLine": true,

    // Do not insert fake floating text in my code about type info etc
    "inlayHint.enable": false,

    // Automatically lint Markdown whenever
    "markdownlint.onChange": true,
    "markdownlint.onOpen": true,
    "markdownlint.onSave": true,

    // Use Google style for coc-pydocstring and not sphinx or numpy
    "pydocstring.formatter": "google",

    // The whole file action just means adding docstring for each function
    "pydocstring.enableFileAction": false,

    // Using pylint for diagnostics so disabling pyright diagnostics
    "pyright.disableDiagnostics": true,

    // Use isort to sort imports, see python.sortImports.args for isort args
    "pyright.organizeimports.provider": "isort",

    // Use Google style for formatting with YAPF
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": "--style=google",

    // Use pylint with .pylintrc to enforce Google Style. More tools in docs
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,

    // Use Google style for sorting imports with isort
    "python.sortImports.args": [
        "--profile",
        "google"
    ],

    // Do not automatically select the first item on popup menu
    "suggest.noselect": false
}
